# Refer to all C/Fortran routines by their name (rather than strings)
# See R_registerRoutines in R_init_rcqp()
useDynLib(rcqp, .registration = TRUE)

export(
	"cqi_getRegistry",
	"cqi_setRegistry",
	"cqi_attribute_size",
	"cqi_attributes",
	"cqi_alg2cpos",
